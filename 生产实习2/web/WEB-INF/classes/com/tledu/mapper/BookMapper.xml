<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tledu.mapper.BookMapper">
<select id="getBookList" parameterType="map" resultType="Book">
    select * from t_book
    <where>
        <if test="min !=null and min !=''">
            and price &gt;= #{min}
        </if>
        <if test="max !=null and max !=''">
            and price &lt;= #{max}
        </if>
    </where>

</select>
    <delete id="deleteBookById" >
        delete from t_book where id=#{id};
    </delete>
    <select id="getBookById" resultType="Book">
        select * from t_book where id=#{id};
    </select>
    <insert id="addBook" parameterType="Book">
        insert into t_book(name,author,price,sales,stock,img_path) value (#{name},#{author},#{price},#{sales},#{stock},#{img_path});
    </insert>
    <update id="updateBook" parameterType="Book" >
        update t_book
        <set >
            <if test="name != null" >
                name = #{name},
            </if>
            <if test="price != null" >
                price = #{price},
            </if>
            <if test="author != null" >
                author = #{author},
            </if>
            <if test="sales != null" >
                sales = #{sales},
            </if>
            <if test="stock != null" >
                stock = #{stock},
            </if>
            <if test="img_path != null" >
                img_path = #{img_path},
            </if>
        </set>
        where id = #{id}
    </update>
    <select id="getUserList" parameterType="map" resultType="Book">
        select * from t_book limit #{start} , #{pageSize};
    </select>
</mapper>